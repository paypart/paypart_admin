@model paypart_admin.Models.Biller
@{
    ViewData["Title"] = "New Biller";
}
<div id="div-manage-org">
    <div id="div-org-search" class="row" style="height:60px;">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group custom-search-form">
                    <input id="txtSearchOrgs" type="text" class="form-control single-biller-name-tag" placeholder="Search billers...">
                    <span class="input-group-btn">
                        <button id="btnSearchOrgs" class="btn btn-primary" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <div id="div-new-org">
        <div id="div-org-form" class="panel panel-default">
            <div class="panel-heading">
                <label id="label-panel-heading">Create a new biller</label>
                <input type="hidden" id="hdnBillerId" value="0" />
                <input type="hidden" id="hdnBillerContactId" value="0" />
            </div>
            <div class="panel-body">
                <form role="form" id="form-new-biller" name="form-new-org">
                    <fieldset>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="category_id">Biller Category</label>
                                    <select id="category_id" class="form-control" name="category_id">
                                        <option value="0">Select Biller Category</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" id="title" class="form-control" name="title" />
                                    <label id="lblBillerTitle"></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Logo</label>
                                    <input type="file" id="logo" class="form-control" name="logo" accept=".jpg,.gif,.bmp,.png" />
                                    <a id="anchorFile" download></a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Street</label>
                                    <input type="text" id="street" class="form-control" name="billercontact.street" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>City</label>
                                    <input type="text" id="city" class="form-control" name="billercontact.city" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Post Code</label>
                                    <input type="text" id="postcode" class="form-control" name="billercontact.postcode" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Country</label>
                                    <select id="countryid" class="form-control" name="billercontact.countryid">
                                        <option value="0">Select Country</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>State</label>
                                    <select id="stateid" class="form-control" name="billercontact.stateid">
                                        <option value="0">Select State</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" id="email" class="form-control" name="billercontact.email" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="number" id="phone" class="form-control" name="billercontact.phone" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email (Alternate)</label>
                                    <input type="email" id="emailaux" class="form-control" name="billercontact.emailaux" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phone (Alternate)</label>
                                    <input type="number" id="phoneaux" class="form-control" name="billercontact.phoneaux" />
                                </div>
                            </div>
                        </div>
                        <div class="row" style="height:80px;">
                            <div class="col-md-12">
                                <div class="form-group text-right">
                                    <button type="submit" id="btnSubmitOrg11" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Views/AddBiller.js"></script>