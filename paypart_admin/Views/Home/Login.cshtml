@model paypart_admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home"))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="modal fade" id="sucModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content11">
                    <div class="alert alert-success" id="success-alert">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <strong>Success </strong>
                        <label id="successlbl"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="failModal" role="dialog">
            <div class="modal-dialog">
                <div class="alert alert-danger" id="danger-alert">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <strong>Failed </strong>
                    <label id="failurelbl"></label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" id="signInHeader">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" id="logInEmail" placeholder="E-mail" name="email" type="email" value="@Model.Email" @Model.emailautofocus>
                                <input type="hidden" id="userid" name="id" value="@Model.id" />
                            </div>
                            <div class="form-group" id="passdiv" style="display:@Model.passdiv">
                                <input class="form-control" id="txtPassword" placeholder="Password" name="password" type="password" value="@Model.Password">
                            </div>
                             @*resetdiv*@                       
                            <div id="logindiv" style="display:@Model.logindiv">
                                <div>
                                    @*<div class="checkbox"><label>
                                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                        </label> </div>*@
                                    <button type="button" id="btnForgotPwd" class="btn btn-link">Forgot Password</button>
                                </div>
                                <label id="lblLogin" style="color:red;">@Model.Message</label>
                                <input type="submit" class="btn btn-lg btn-success btn-block" name="submit" value="Login" />
                            </div>
                            <div id="resetdiv" style="display:@Model.resetdiv">
                                <button type="button" id="btnSignIn" class="btn btn-link">Sign In</button>
                                <label id="lblResetPwd" style="color:red;"></label>
                                <input type="button" id="btnResetPwd" class="btn btn-lg btn-success btn-block" value="Reset" />
                            </div>
                            <form>
                                <div id="changediv" style="display:@Model.changediv">
                                    <div class="form-group">
                                        <input class="form-control" placeholder="New Password" name="changepwd" type="password" value="@Model.Changepwd" @Model.changepwdautofocus>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Confirm Password" name="confirmpwd" type="password" value="@Model.Confirmpwd">
                                    </div>
                                    <label style="color:red;">@Model.Message</label>
                                    <input type="submit" class="btn btn-lg btn-success btn-block" name="submit" value="Change" />
                                </div>
                            </form>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/hmac-sha256.js"></script>
    <script src="~/js/enc-base64-min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/startmin.js"></script>
    <script src="~/js/jquery.base64.js"></script>
    <script src="~/js/login.js"></script>
}