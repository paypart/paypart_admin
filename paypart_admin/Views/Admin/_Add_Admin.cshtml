@model paypart_admin.Models.User
@{
    ViewData["Title"] = "Add Admin";
}
<div id="div-new-admin">
    <div id="div-admin-form" class="panel panel-default">
        <div class="panel-heading">
            <label id="label-admin-panel-heading">Create a new administrator</label>
            <input type="hidden" id="hdnAdminId" value="0" />
        </div>
        <div class="panel-body">
            <form role="form" id="form-new-admin" name="form-new-admin">
                <fieldset>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Role</label>
                                <select id="role_id" class="form-control" name="role_id">
                                    <option value="0">Select Role</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Biller</label>
                                <select id="billerid" class="form-control" name="billerid">
                                    <option value="0">Select Biller</option>
                                </select>
                                @*<input type="text" id="billerid" class="form-control single-biller-name-tag" name="billerid" />*@
                                <label id="lblAdminOrg"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" id="username" class="form-control" name="username" />
                                <label id="lblAdminUname"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="email" class="form-control" name="email" />
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
@*<script src="~/js/validate.js"></script>*@
<script src="~/js/Views/AddAdmin.js"></script>
